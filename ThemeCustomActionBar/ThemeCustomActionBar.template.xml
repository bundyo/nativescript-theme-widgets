<GridLayout class="nt-action-bar" columns="auto, *, auto" xmlns:ui="nativescript-theme-core">
    <ui:ThemeIcon class="action-bar__nav-button"
                  name="{{ menu ? 'bars' : backButton ? 'chevron-left' : undefined }}"
                  tap="{{ onTap }}" visibility="{{ menu || backButton ? 'visible' : 'collapsed' }}" />
    <Label col="1" class="action-bar__title" text="{{ title }}" ios:horizontalAlignment="center" android:horizontalAlignment="left"/>
    <StackLayout col="2" id="NTCustomActionBarStackLayout" />
</GridLayout>
