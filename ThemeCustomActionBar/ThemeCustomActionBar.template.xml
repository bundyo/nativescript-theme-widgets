<GridLayout class="action-bar__container" columns="auto, *" xmlns:ui="nativescript-theme-widgets">
    <ui:ThemeIcon class="action-bar__nav-button" name="{{ back ? 'chevron-left' : menu ? 'bars' : undefined }}"
                  tap="{{ onTap }}" visibility="{{ menu || backButton ? 'visible' : 'collapsed' }}"/>
    <Label col="1" class="action-bar__title" text="{{ title }}" ios:horizontalAlignment="center" />
</GridLayout>
