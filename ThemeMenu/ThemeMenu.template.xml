<ListView class="theme-menu__list" items="{{ items }}" itemTap="{{ onTap }}" xmlns:ui="nativescript-theme-core">
    <ListView.itemTemplate>
        <StackLayout orientation="horizontal" class="{{ value === $parent.selected ? 'active' : '' }}">
            <ui:ThemeIcon class="theme-menu__icon" name="{{ icon }}" />
            <Label class="theme-menu__text" text="{{ text || value }}" />
        </StackLayout>
    </ListView.itemTemplate>
</ListView>
